          <div class="form-field">
            <label class="form-label">拒绝理由 <span class="optional">(可选)</span></label>
            <textarea class="form-textarea" placeholder="请输入拒绝理由，用户将看到此信息" rows="3" value={{this.rejectReason}} {{on "input" this.updateRejectReason}}></textarea>
            <div class="reject-reason-presets">
              <span class="preset-label">快捷选择：</span>
              <button class="preset-btn" {{on "click" (fn (mut this.rejectReason) "发票信息填写不完整")}}>信息不完整</button>
              <button class="preset-btn" {{on "click" (fn (mut this.rejectReason) "纳税人识别号格式错误")}}>税号错误</button>
              <button class="preset-btn" {{on "click" (fn (mut this.rejectReason) "订单金额不符合开票要求")}}>金额不符</button>
              <button class="preset-btn" {{on "click" (fn (mut this.rejectReason) "联系方式填写有误")}}>联系方式错误</button>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button class="modal-btn cancel" {{on "click" this.closeRejectInvoiceModal}}>取消</button>
          <button class="modal-btn danger" {{on "click" this.rejectInvoice}} disabled={{this.isLoading}}>
            {{#if this.isLoading}}
              <span>处理中...</span>
            {{else}}
              <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path fill="currentColor" d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"/></svg>
              <span>确认拒绝</span>
            {{/if}}
          </button>
        </div>
      </div>
    </div>
  {{/if}}

  {{!-- 发票详情模态框 --}}
  {{#if this.showInvoiceDetailModal}}
    <div class="coin-modal-overlay" {{on "click" this.closeInvoiceDetailModal}}>
      <div class="coin-modal" {{on "click" this.stopPropagation}}>
        <div class="modal-header">
          <div class="modal-title-wrap">
            <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path fill="currentColor" d="M64 0C28.7 0 0 28.7 0 64V448c0 35.3 28.7 64 64 64H320c35.3 0 64-28.7 64-64V160H256c-17.7 0-32-14.3-32-32V0H64z"/></svg>
            <h3>发票详情</h3>
          </div>
          <button class="modal-close-btn" {{on "click" this.closeInvoiceDetailModal}}>
            <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path fill="currentColor" d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"/></svg>
          </button>
        </div>
        <div class="modal-body">
          {{#if this.selectedInvoiceDetail}}
            <div class="invoice-detail-grid">
              <div class="detail-row">
                <span class="detail-label">{{i18n "js.coin.admin_page.applicant"}}</span>
                <span class="detail-value">{{this.selectedInvoiceDetail.username}}</span>
              </div>
              <div class="detail-row">
                <span class="detail-label">{{i18n "js.coin.admin_page.invoice_amount"}}</span>
                <span class="detail-value">¥{{this.selectedInvoiceDetail.amount}}</span>
              </div>
              <div class="detail-row">
                <span class="detail-label">{{i18n "js.coin.admin_page.invoice_type"}}</span>
                <span class="detail-value">
                  <span class="invoice-type-badge {{this.selectedInvoiceDetail.invoice_type}}">
                    {{#if (eq this.selectedInvoiceDetail.invoice_type "personal")}}
                      {{i18n "js.coin.invoice.type_personal"}}
                    {{else}}
                      {{i18n "js.coin.invoice.type_company"}}
                    {{/if}}
                  </span>
                </span>
              </div>
              <div class="detail-row">
                <span class="detail-label">{{if (eq this.selectedInvoiceDetail.invoice_type "personal") (i18n "js.coin.invoice.name") (i18n "js.coin.invoice.company_name")}}</span>
                <span class="detail-value">{{this.selectedInvoiceDetail.invoice_title}}</span>
              </div>
              {{#unless (eq this.selectedInvoiceDetail.invoice_type "personal")}}
                {{#if this.selectedInvoiceDetail.contact_name}}
                <div class="detail-row">
                  <span class="detail-label">{{i18n "js.coin.invoice.contact_name"}}</span>
                  <span class="detail-value">{{this.selectedInvoiceDetail.contact_name}}</span>
                </div>
                {{/if}}
              {{/unless}}
              {{#if this.selectedInvoiceDetail.email}}
              <div class="detail-row">
                <span class="detail-label">{{if (eq this.selectedInvoiceDetail.invoice_type "personal") (i18n "js.coin.invoice.email") (i18n "js.coin.invoice.contact_email")}}</span>
                <span class="detail-value">{{this.selectedInvoiceDetail.email}}</span>
              </div>
              {{/if}}
              {{#if this.selectedInvoiceDetail.phone}}
              <div class="detail-row">
                <span class="detail-label">{{if (eq this.selectedInvoiceDetail.invoice_type "personal") (i18n "js.coin.invoice.phone") (i18n "js.coin.invoice.contact_phone")}}</span>
                <span class="detail-value">{{this.selectedInvoiceDetail.phone}}</span>
              </div>
              {{/if}}
              {{#if this.selectedInvoiceDetail.billing_address}}
              <div class="detail-row">
                <span class="detail-label">{{i18n "js.coin.invoice.billing_address"}}</span>
                <span class="detail-value">{{this.selectedInvoiceDetail.billing_address}}</span>
              </div>
              {{/if}}
              {{#if this.selectedInvoiceDetail.tax_number}}
              <div class="detail-row">
                <span class="detail-label">{{i18n "js.coin.invoice.tax_number"}}</span>
                <span class="detail-value">{{this.selectedInvoiceDetail.tax_number}}</span>
              </div>
              {{/if}}
              {{#if this.selectedInvoiceDetail.out_trade_no}}
                <div class="detail-row">
                  <span class="detail-label">关联订单</span>
                  <span class="detail-value">{{this.selectedInvoiceDetail.out_trade_no}}</span>
                </div>
              {{/if}}
            </div>
          {{/if}}
        </div>
        <div class="modal-footer">
          <button class="modal-btn cancel" {{on "click" this.closeInvoiceDetailModal}}>关闭</button>
        </div>
      </div>
    </div>
  {{/if}}
</div>
