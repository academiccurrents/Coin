            {{/if}}
          </button>
        </div>
      </div>
    </div>
  {{/if}}

  {{!-- 编辑发票URL模态框 --}}
  {{#if this.showEditInvoiceModal}}
    <div class="coin-modal-overlay" {{on "click" this.closeEditInvoiceModal}}>
      <div class="coin-modal" {{on "click" this.stopPropagation}}>
        <div class="modal-header">
          <div class="modal-title-wrap">
            <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.7 15.7-7.4 21.9-13.5L480 132.3l-97.9-97.9L172.4 241.7zM96 64C43 64 0 107 0 160V416c0 53 43 96 96 96H352c53 0 96-43 96-96V320c0-17.7-14.3-32-32-32s-32 14.3-32 32v96c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H96z"/></svg>
            <h3>编辑发票URL</h3>
          </div>
          <button class="modal-close-btn" {{on "click" this.closeEditInvoiceModal}}>
            <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path fill="currentColor" d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"/></svg>
          </button>
        </div>
        <div class="modal-body">
          {{#if this.editingInvoice}}
            <div class="edit-invoice-info">
              <div class="edit-invoice-row">
                <span class="edit-invoice-label">用户</span>
                <span class="edit-invoice-value">{{this.editingInvoice.username}}</span>
              </div>
              <div class="edit-invoice-row">
                <span class="edit-invoice-label">金额</span>
                <span class="edit-invoice-value">{{this.editingInvoice.amount}} {{model.coinName}}</span>
              </div>
            </div>
          {{/if}}
          <div class="form-field">
            <label class="form-label">发票URL</label>
            <input type="url" class="form-input" placeholder="请输入新的发票图片URL" value={{this.editInvoiceUrl}} {{on "input" this.updateEditInvoiceUrl}} />
            <span class="form-hint">修改后用户将看到新的发票链接</span>
          </div>
        </div>
        <div class="modal-footer">
          <button class="modal-btn cancel" {{on "click" this.closeEditInvoiceModal}}>取消</button>
          <button class="modal-btn primary" {{on "click" this.saveInvoiceUrl}} disabled={{this.isLoading}}>
            {{#if this.isLoading}}
              <span>保存中...</span>
            {{else}}
              <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="currentColor" d="M64 32C28.7 32 0 60.7 0 96V416c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V173.3c0-17-6.7-33.3-18.7-45.3L352 50.7C340 38.7 323.7 32 306.7 32H64zm0 96c0-17.7 14.3-32 32-32H288c17.7 0 32 14.3 32 32v64c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V128zM224 288a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"/></svg>
              <span>保存</span>
            {{/if}}
          </button>
        </div>
      </div>
    </div>
  {{/if}}

  {{!-- 成功提示 --}}
  {{#if this.showSuccessMessage}}
    <div class="coin-toast success">
      <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM369 209L241 337c-9.4 9.4-24.6 9.4-33.9 0l-64-64c-9.4-9.4-9.4-24.6 0-33.9s24.6-9.4 33.9 0l47 47L335 175c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9z"/></svg>
      <span>{{this.successMessage}}</span>
    </div>
  {{/if}}

  {{!-- 拒绝发票模态框 --}}
  {{#if this.showRejectInvoiceModal}}
    <div class="coin-modal-overlay" {{on "click" this.closeRejectInvoiceModal}}>
      <div class="coin-modal" {{on "click" this.stopPropagation}}>
        <div class="modal-header">
          <div class="modal-title-wrap">
            <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM175 175c9.4-9.4 24.6-9.4 33.9 0l47 47 47-47c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9l-47 47 47 47c9.4 9.4 9.4 24.6 0 33.9s-24.6 9.4-33.9 0l-47-47-47 47c-9.4 9.4-24.6 9.4-33.9 0s-9.4-24.6 0-33.9l47-47-47-47c-9.4-9.4-9.4-24.6 0-33.9z"/></svg>
            <h3>拒绝发票申请</h3>
          </div>
          <button class="modal-close-btn" {{on "click" this.closeRejectInvoiceModal}}>
            <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path fill="currentColor" d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"/></svg>
