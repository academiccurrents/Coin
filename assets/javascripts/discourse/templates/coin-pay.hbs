      <div class="coin-modal coin-modal-lg users-modal" {{on "click" this.stopPropagation}}>
        <div class="modal-header">
          <div class="modal-title-wrap">
            <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512"><path fill="currentColor" d="M144 0a80 80 0 1 1 0 160A80 80 0 1 1 144 0zM512 0a80 80 0 1 1 0 160A80 80 0 1 1 512 0zM0 298.7C0 239.8 47.8 192 106.7 192h42.7c15.9 0 31 3.5 44.6 9.7c-1.3 7.2-1.9 14.7-1.9 22.3c0 38.2 16.8 72.5 43.3 96c-.2 0-.4 0-.7 0H21.3C9.6 320 0 310.4 0 298.7zM405.3 320c-.2 0-.4 0-.7 0c26.6-23.5 43.3-57.8 43.3-96c0-7.6-.7-15-1.9-22.3c13.6-6.3 28.7-9.7 44.6-9.7h42.7C592.2 192 640 239.8 640 298.7c0 11.8-9.6 21.3-21.3 21.3H405.3zM224 224a96 96 0 1 1 192 0 96 96 0 1 1 -192 0zM128 485.3C128 411.7 187.7 352 261.3 352H378.7C452.3 352 512 411.7 512 485.3c0 14.7-11.9 26.7-26.7 26.7H154.7c-14.7 0-26.7-11.9-26.7-26.7z"/></svg>
            <h3>{{this.selectedGroup.name}} - {{i18n "js.coin.discount.manage_users"}}</h3>
          </div>
          <button class="modal-close-btn" {{on "click" this.closeGroupUsersModal}}>
            <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path fill="currentColor" d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"/></svg>
          </button>
        </div>
        <div class="modal-body admin-modal-body">
          <div class="user-search-section">
            <div class="user-search-wrap">
              <input 
                type="text" 
                class="form-input user-search-input" 
                placeholder="{{i18n "js.coin.discount.search_user"}}" 
                value={{this.userSearchTerm}}
                {{on "input" this.updateUserSearchTerm}}
                {{on "keyup" this.searchUsers}}
              />
              <button class="user-search-btn" {{on "click" this.searchUsers}} disabled={{this.isSearching}}>
                <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"/></svg>
              </button>
            </div>
            {{#if this.userSearchResults.length}}
              <div class="user-search-results">
                {{#each this.userSearchResults as |user|}}
                  <div class="user-search-item" {{on "click" (fn this.addUserToGroup user)}}>
                    <img src="{{user.avatar_url}}" alt="{{user.username}}" class="user-avatar" />
                    <span class="user-name">{{user.username}}</span>
                    <svg class="svg-icon add-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="currentColor" d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z"/></svg>
                  </div>
                {{/each}}
              </div>
            {{/if}}
          </div>

          <div class="group-users-section">
            <div class="section-title-small">{{i18n "js.coin.discount.current_members"}}（{{this.groupUsers.length}}）</div>
            {{#if this.isDiscountLoading}}
              <div class="admin-loading">
                <span>{{i18n "js.coin.loading"}}</span>
              </div>
            {{else if this.groupUsers.length}}
              <div class="group-users-list">
                {{#each this.groupUsers as |user|}}
                  <div class="group-user-item">
                    <img src="{{user.avatar_url}}" alt="{{user.username}}" class="user-avatar" />
                    <span class="user-name">{{user.username}}</span>
                    <button class="user-remove-btn" title="{{i18n "js.coin.pay.remove"}}" {{on "click" (fn this.removeUserFromGroup user)}}>
                      <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="currentColor" d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/></svg>
                    </button>
                  </div>
                {{/each}}
              </div>
            {{else}}
              <div class="admin-empty">
                <span>{{i18n "js.coin.discount.no_members"}}</span>
              </div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  {{/if}}
</div>
